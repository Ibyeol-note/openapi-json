{
    "openapi": "3.0.0",
    "info": {
        "title": "IbyeolNote",
        "version": "1.0.0",
        "description": "API documentation for IbyeolNote"
    },
    "components": {
        "parameters": {
            "LoginMehtod": {
                "name": "LoginMehtod",
                "in": "path",
                "required": true,
                "description": "로그인 방법",
                "schema": {
                    "type": "string",
                    "enum": ["NAVER", "KAKAO", "GOOGLE", "APPLE"],
                    "example": "KAKAO"
                }
            }
        },
        "schemas": {
            "SuccessLogin": {
                "type": "object",
                "properties": {
                    "accessToken": {
                        "type": "string",
                        "nullable": false,
                        "example": "d290f1ee-6c54-4b01-90e6-d701748f0851"
                    },
                    "refreshToken": {
                        "type": "string",
                        "nullable": false,
                        "example": "d290f1ee-6c54-4b01-90e6-d701748f0851"
                    },
                    "accessTokenExp": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": false,
                        "example": "2024-10-23T09:00:00Z"
                    },
                    "refreshTokenExp": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": false,
                        "example": "2024-10-23T09:00:00Z"
                    }
                }
            },
            "Post": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "uuid",
                        "example": "d290f1ee-6c54-4b01-90e6-d701748f0851"
                    },
                    "content": {
                        "type": "string",
                        "example": "This is a post content"
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-10-22T08:42:00Z"
                    },
                    "updatedAt": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true,
                        "example": "2024-10-23T09:00:00Z"
                    },
                    "isDeleted": {
                        "type": "boolean",
                        "example": false
                    },
                    "deletedAt": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true,
                        "example": null
                    }
                }
            },
            "CreatePostDto": {
                "type": "object",
                "required": ["content"],
                "properties": {
                    "content": {
                        "type": "string",
                        "example": "New post content"
                    }
                }
            }
        }
    },
    "paths": {
        "/auth/{LoginMethod}": {
            "parameters": [
                {
                    "$ref": "#/components/parameters/LoginMehtod"
                }
            ],
            "post": {
                "summary": "OAuth Login (초기 진입시 회원가입)",
                "tags": ["Auth"],
                "responses": {
                    "200": {
                        "description": "로그인 성공",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SuccessLogin"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/post": {
            "post": {
                "summary": "게시글 작성",
                "tags": ["Posts"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CreatePostDto"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "게시글 작성 성공",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Post"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
