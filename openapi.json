{
    "openapi": "3.0.0",
    "info": {
        "title": "IbyeolNote",
        "version": "1.0.0",
        "description": "API documentation for IbyeolNote"
    },
    "components": {
        "parameters": {
            "LoginMethod": {
                "name": "LoginMethod",
                "in": "path",
                "required": true,
                "description": "로그인 방법",
                "schema": {
                    "type": "string",
                    "enum": ["NAVER", "KAKAO", "GOOGLE", "APPLE"],
                    "example": "KAKAO"
                }
            }
        },
        "schemas": {
            "SuccessLogin": {
                "type": "object",
                "properties": {
                    "accessToken": {
                        "type": "string",
                        "example": "d290f1ee-6c54-4b01-90e6-d701748f0851"
                    },
                    "refreshToken": {
                        "type": "string",
                        "example": "This is a post content"
                    },
                    "accessTokenExp": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true,
                        "example": "2024-10-23T09:00:00Z"
                    },
                    "refreshTokenExp": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true,
                        "example": null
                    }
                }
            },
            "Post": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "uuid",
                        "example": "d290f1ee-6c54-4b01-90e6-d701748f0851"
                    },
                    "content": {
                        "type": "string",
                        "example": "This is a post content"
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-10-22T09:00:00Z"
                    },
                    "updatedAt": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true,
                        "example": "2024-10-23T09:00:00Z"
                    },
                    "isDeleted": {
                        "type": "boolean",
                        "example": false
                    },
                    "deletedAt": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true,
                        "example": null
                    }
                }
            },
            "CreatePostDto": {
                "type": "object",
                "required": ["content"],
                "properties": {
                    "content": {
                        "type": "string",
                        "example": "New post content"
                    }
                }
            },
            "UpdatePostDto": {
                "type": "object",
                "required": ["content"],
                "properties": {
                    "title": {
                        "type": "string",
                        "required": false,
                        "example": "게시글 제목 수정"
                    },
                    "content": {
                        "type": "string",
                        "required": false,
                        "example": "게시글 내용 수정"
                    }
                }
            }
        }
    },
    "paths": {
        "/auth/{LoginMethod}": {
            "parameters": [
                {
                    "$ref": "#/components/parameters/LoginMethod"
                }
            ],
            "post": {
                "summary": "OAuth Login (초기 진입시 회원가입)",
                "tags": ["Auth"],
                "responses": {
                    "200": {
                        "description": "로그인 성공",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SuccessLogin"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/post": {
            "get": {
                "summary": "게시글 목록 조회",
                "description": "Cursor 페이지네이션을 사용해 게시글을 조회합니다.",
                "tags": ["Posts"],
                "parameters": [
                    {
                        "name": "cursor",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "description": "현재 페이지의 마지막 게시글 ID"
                        }
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 5,
                            "description": "페이지당 조회할 게시글의 개수"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "게시글 목록 조회 성공",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Post"
                                            }
                                        },
                                        "nextCursor": {
                                            "type": "string",
                                            "nullable": true,
                                            "description": "다음 페이지를 조회하기 위한 커서 값 (더 이상 데이터가 없으면 null)"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "게시글 작성",
                "tags": ["Posts"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CreatePostDto"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "게시글 작성 성공",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Post"
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "summary": "게시글 수정",
                "tags": ["Posts"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CreatePostDto"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "게시글 작성 성공",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Post"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/post/{id}": {
            "get": {
                "summary": "게시글 상세 조회",
                "description": "특정 게시글을 ID로 조회합니다.",
                "tags": ["Posts"],
                "parameters": [
                    {
                        "name": "postId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        },
                        "description": "조회할 게시글의 ID"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "게시글 조회 성공",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Post"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "게시글을 찾을 수 없음"
                    }
                }
            }
        }
    }
}
